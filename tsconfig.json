{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "sourceMap": true,
    "lib": ["es2016", "es2017", "dom", "esnext.asynciterable"],
    "strict": true,
    "outDir": "compiled",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./server/**/*.ts", "./app/**/*.ts", "./app/**/*.tsx", "./declarations/*"],
  "exclude": ["node_modules", "./server/**/*.spec.ts"]
}
