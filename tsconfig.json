{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "sourceMap": true,
    "lib": ["es2016", "es2017", "dom", "esnext.asynciterable"],
    "strict": true,
    // does not work with our objection models which have no constructor
    "strictPropertyInitialization": false,
    "outDir": "compiled",
    "typeRoots": ["node_modules/@types"]
  },
  "files": ["server/index.ts", "app/client.tsx"],
  "exclude": ["node_modules"]
}
