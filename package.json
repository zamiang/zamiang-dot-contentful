{
  "name": "zamiang-dot-contentful",
  "version": "0.0.1",
  "description": "A Node.js app using Express 4 with Webpack, React. Data stored on Contentful",
  "repository": "https://github.com/zamiang/zamiang-dot-contentful",
  "main": "index.js",
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "prettier": "prettier --write \"{app,server,webpack,scripts}/**/*.{ts,tsx,js,css,graphql}\"",
    "typecheck": "tsc --project tsconfig.json --noEmit --pretty",
    "stylelint": "stylelint 'app/**/*.css'",
    "clean": "rimraf public && rimraf compiled",
    "start": "cross-env NODE_ENV=production node compiled/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build:dev": "cross-env NODE_ENV=development webpack --colors --display-error-details --config ./webpack/webpack.config.js",
    "build": "yarn run clean && cross-env NODE_ENV=production webpack --colors --display-error-details --config ./webpack/webpack.config.js",
    "stats": "yarn run clean && cross-env NODE_ENV=production webpack --json > stats.json",
    "postinstall": "if [ $BUILD_ASSETS ]; then yarn run build; else yarn run build:dev; fi",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:notify": "yarn run test:watch -- --notify",
    "coverage": "npm test -- --coverage",
    "coverage:notify": "npm run coverage -- --watch --notify"
  },
  "author": "Brennan Moore",
  "license": "MIT",
  "jest": {
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^.+\\.(j|t)sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "app/**/*.{ts,tsx}",
      "server/**/*.{ts,tsx}",
      "!app/assets/**",
      "!app/**/*.css.d.ts",
      "!app/graphql/**"
    ],
    "mapCoverage": true,
    "testMatch": [
      "<rootDir>/app/**/?(*.)(spec|test).ts?(x)",
      "<rootDir>/server/**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupFiles": [
      "raf/polyfill"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  },
  "devDependencies": {
    "caniuse-lite": "^1.0.30000792",
    "cssnano": "^3.10.0",
    "expect": "^22.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.1.4",
    "nodemon": "^1.10.2",
    "prettier": "^1.10.2",
    "react-addons-test-utils": "^15.4.2",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-microsoft-contrib": "^5.0.2"
  },
  "engines": {
    "node": "8.x"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/classnames": "^2.2.3",
    "@types/express": "^4.0.35",
    "@types/graphql": "^0.12.3",
    "@types/marked": "^0.3.0",
    "@types/method-override": "^0.0.31",
    "@types/morgan": "^1.7.32",
    "@types/node": "8.5.7",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/react-helmet": "^5.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "^3.0.3",
    "@types/react-router-redux": "4",
    "@types/redux-logger": "^3.0.5",
    "@types/webpack": "^3.8.4",
    "autoprefixer": "^7.2.5",
    "awesome-typescript-loader": "^3.0.4-rc.2",
    "axios": "^0.17.1",
    "body-parser": "^1.16.0",
    "classnames": "^2.2.3",
    "concurrently": "^3.3.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "dotenv": "^5.0.0",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "graphql": "^0.12.3",
    "graphql-server-express": "^1.3.2",
    "graphql-tag": "^2.6.1",
    "graphql-tools": "^2.19.0",
    "helmet": "^3.4.0",
    "marked": "^0.3.5",
    "method-override": "^2.3.7",
    "moment": "^2.17.1",
    "morgan": "^1.8.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.1.0",
    "postcss-reporter": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-markdown": "^3.1.5",
    "react-redux": "^5.0.2",
    "react-router": "3",
    "react-router-redux": "^4.0.8",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.5.3",
    "style-loader": "^0.20.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "tinycolor2": "^1.4.1",
    "ts-loader": "^3.4.0",
    "typescript": "^2.1.6",
    "typings-for-css-modules-loader": "^1.7.0",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "url-loader": "^0.6.2",
    "warning": "^3.0.0",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.16.1"
  }
}
